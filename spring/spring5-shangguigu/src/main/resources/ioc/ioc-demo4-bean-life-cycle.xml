<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean 生命周期 -->
    <bean id="userLifeCycle" class="ioc.bean.lifecycle.UserLifeCycle" init-method="init" destroy-method="destroy">
        <property name="name" value="生命周期Bean"/>
    </bean>

    <bean id="beanPostProcessor" class="ioc.bean.lifecycle.LifeCycleBeanPostProcessor"/>

</beans>